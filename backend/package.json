{
  "name": "backend",
  "version": "1.0.0",
  "description": "MERN App Backend",
  "main": "src/index.ts",
  "private": false,
  "author": "Asif Vora <asifvora0@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asif-simform/MERN-Stack.git"
  },
  "bugs": {
    "url": "https://github.com/asif-simform/MERN-Stack/issues"
  },
  "homepage": "https://github.com/asif-simform/MERN-Stack",
  "scripts": {
    "typesync": "typesync",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "build": "rm -rf ./dist && tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "add-build": "git add dist",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "pre-commit": [
    "build",
    "add-build"
  ],
  "keywords": [
    "node",
    "MERN"
  ],
  "dependencies": {
    "@types/node": "^18.11.7",
    "body-parser": "^1.20.1",
    "cloudmailin": "^0.0.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.11.0",
    "mongoose": "^6.7.0",
    "multer": "^1.4.5-lts.1",
    "shortid": "^2.2.16",
    "swagger-ui-express": "^4.5.0",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/mocha": "^10.0.0",
    "@types/nodemon": "^1.19.2",
    "@types/prettier": "^2.7.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typesync": "^0.9.2"
  }
}
